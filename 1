#include "stdafx.h"
#include <string>
#include <iostream>
using namespace std;

class Insect
{
public:
	Insect()
	{
		cout<< "Insect()\n";
	}
	Insect(int weight1,string type1, string color1)
	{
		cout<< "Insect(int weight1,string type1, string color1)\n";
	}
	Insect(const Insect& p)
	{
		cout<< "Insect(const Insect& p)\n";		
	}
	~Insect()
	{
		cout << "~Insect()\n";
	}
};

class Animal
{
public:
	string type;
	int weight;
	string color;
	Insect n1;
	Animal():n1()
	{
		cout<< "Animal():n1()\n";
		weight= 0;
		type= "_";
		color= "_";
	}
	Animal(int weight,string type, string color): n1(weight, type, color)
	{
		cout<< "Animal(int weight,string type, string color): n1(weight, type, color)\n";
		this ->weight= weight;
		this ->type= type;
		this ->color= color;
	}
	Animal(const Animal &p): n1(p.n1)
	{
		cout<< "Animal(const Animal &p): n1(p.n1)\n";
		weight= p.weight;
		type= p.type;
		color= p.color;
	}
	~Animal()
	{
		cout << "~Animal()\n";
		cout << weight << " " << type << " " << color << endl;
	}
void twotype()
	{
		type = "hare";
	}
	void change();
};

void Animal::change()
{
	weight = 8;
	color = "white";
}

int main()
{
	{
		Animal k1;
		Animal k2 = k1;
	}
		cin.get();
		return 0;
}
